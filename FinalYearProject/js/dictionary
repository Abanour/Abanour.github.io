// Method is executed when the change button is clicked
$(".change").click(function() {
    var dictionary = {
        "sample": "Word changed",
        "On the other hand, However": "For the time being, for now",
        ",": ", "
    };

    // References the dictionary to make the swaps available
    // At this moment, the dictionary only has a few records.
    $(".txtDisplay").each(function() {
        for (var ptrn in dictionary) {
            $(this).val($(this).val().replace(new RegExp(ptrn, "g"), dictionary[ptrn]));
        }
    });
    alert("done");


});

document.getElementById('txtHold')
    .addEventListener('change', getFile)

function getFile(event) {
    const input = event.target
    if ('files' in input && input.files.length > 0) {
        placeFileContent(
            document.getElementById('content-target'),
            input.files[0])
        placeFileContent(
            document.getElementById('event_content'),
            input.files[0])

    }

}